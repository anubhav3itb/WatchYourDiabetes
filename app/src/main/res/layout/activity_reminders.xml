<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_reminders"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/gradient"
    tools:context="com.example.anubhavbhardwaj.watchyourdiabetes.Reminders">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Monthly Reminders"
                    android:ems="10"
                    android:layout_alignParentStart="true"
                    android:id="@+id/Text1"
                    android:textSize="22sp"
                    android:textColor="@android:color/background_light"/>

                <TextView
                    android:textStyle="bold"
                    android:text="Day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/Text3"
                    android:layout_toEndOf="@+id/Text1"
                    android:textSize="22sp"
                    android:textColor="@android:color/background_light"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Endocrinologist"
                    android:ems="10"
                    android:layout_alignParentStart="true"
                    android:id="@+id/endo"
                    android:textSize="22sp"
                    android:textColor="@android:color/background_light"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/endo_days"
                    android:text="30"
                    android:textSize="22sp"
                    android:textColor="@android:color/background_light"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/nutri"
                    android:text="Nutritionist"
                    android:layout_alignParentStart="true"
                    android:textSize="22sp"
                    android:textColor="@android:color/background_light"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30"
                    android:ems="10"
                    android:id="@+id/nutri_days"
                    android:inputType="number"
                    android:textSize="22sp"
                    android:textColor="@android:color/background_light"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:textStyle="bold"
                    android:text="Yearly Reminders"
                    android:ems="10"
                    android:id="@+id/Text2"
                    android:layout_marginTop="27dp"
                    android:textSize="22sp"
                    android:textColor="@android:color/background_light"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Opthalmologist"
                    android:ems="10"
                    android:id="@+id/optha"
                    android:textSize="22sp"
                    android:textColor="@android:color/background_light"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30"
                    android:ems="10"
                    android:id="@+id/optha_days"
                    android:inputType="number"
                    android:textSize="22sp"
                    android:textColor="@android:color/background_light"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Nephrologist"
                    android:ems="10"
                    android:id="@+id/nephro"
                    android:textSize="22sp"
                    android:textColor="@android:color/background_light"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:text="30"
                    android:ems="10"
                    android:id="@+id/nephro_days"
                    android:textSize="22sp"
                    android:textColor="@android:color/background_light"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Podatrist"
                    android:ems="10"
                    android:id="@+id/poda"
                    android:textSize="22sp"
                    android:textColor="@android:color/background_light"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:text="30"
                    android:ems="10"
                    android:id="@+id/poda_days"
                    android:textSize="22sp"
                    android:textColor="@android:color/background_light"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Lipid Specialist"
                    android:ems="10"
                    android:id="@+id/lipid"
                    android:textSize="22sp"
                    android:textColor="@android:color/background_light"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30"
                    android:ems="10"
                    android:id="@+id/lipid_days"
                    android:inputType="number"
                    android:textSize="22sp"
                    android:textColor="@android:color/background_light"/>
            </LinearLayout>

            <TextView
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Click on days left to update appointment date"
                android:layout_marginTop="30dp"
                android:id="@+id/Info1"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:textAlignment="center"
                android:textSize="22sp"
                android:textColor="@android:color/background_light"/>

            <TextView
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Click on doctor to update prescription and appointment date"
                android:layout_marginTop="20dp"
                android:id="@+id/Info2"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:textSize="22sp"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Text4"
                android:layout_marginTop="27dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:text="Free Advice"
                android:textAlignment="center"
                android:textSize="22sp"
                android:textColor="@android:color/background_light"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:id="@+id/tidbit1"
                android:layout_alignParentEnd="true"
                android:textColor="@android:color/background_light"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tidbit2"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:textColor="@android:color/background_light"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:id="@+id/tidbit3"
                android:layout_alignParentEnd="true"
                android:textColor="@android:color/background_light"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:id="@+id/tidbit4"
                android:layout_alignParentEnd="true"
                android:textColor="@android:color/background_light"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tidbit5"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:textColor="@android:color/background_light"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:id="@+id/tidbit6"
                android:layout_alignParentEnd="true"
                android:textColor="@android:color/background_light"/>

        </LinearLayout>


    </ScrollView>
</RelativeLayout>
