<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setup_appointment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.anubhavbhardwaj.watchyourdiabetes.SetupAppointment">

    <TextView
        android:text="Have you setup appointment with?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="MONTHLY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:id="@+id/textView4" />

    <Button
        android:text="Endocrinologist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/Endocrinologist"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Opthalmologist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Opthalmologist"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/Lipid" />

    <TextView
        android:text="YEARLY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/Nutritionist"
        android:layout_alignStart="@+id/textView4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Nutritionist"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/Endocrinologist"
        android:layout_alignEnd="@+id/Podiatrist"
        android:text="Nutritionist" />

    <Button
        android:text="Podiatrist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Podiatrist"
        android:layout_below="@+id/Nephrologist"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Nephrologist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Nephrologist"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/Opthalmologist"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Lipid Specialist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Lipid"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/Podiatrist"
        android:layout_alignStart="@+id/Nephrologist" />

    <Button
        android:text="GO HOME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Lipid"
        android:layout_alignEnd="@+id/Podiatrist"
        android:id="@+id/home" />
</RelativeLayout>
