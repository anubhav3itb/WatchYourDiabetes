<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_editable_information2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/gradient"
    tools:context="com.example.anubhavbhardwaj.watchyourdiabetes.EditableInformation2">

    <TextView
        android:text="TREATMENT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="135dp"
        android:id="@+id/textView"
        android:textStyle="bold"
        android:textColor="@android:color/background_light"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Medicine"
        android:ems="10"
        android:layout_marginTop="25dp"
        android:id="@+id/medicine1"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/background_light"
        android:hint="Medicine Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_alignBottom="@+id/medicine2"
        android:layout_toEndOf="@+id/textView"
        android:id="@+id/dosage2"
        android:text="1"
        android:textColor="@android:color/background_light"
        android:hint="Dosage" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Medicine"
        android:ems="10"
        android:layout_below="@+id/medicine2"
        android:layout_alignEnd="@+id/medicine2"
        android:layout_marginTop="38dp"
        android:id="@+id/medicine3"
        android:textColor="@android:color/background_light"
        android:hint="Medicine Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_alignBottom="@+id/medicine3"
        android:layout_alignStart="@+id/dosage2"
        android:id="@+id/dosage3"
        android:text="1"
        android:textColor="@android:color/background_light"
        android:hint="Dosage" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textUri|textEmailAddress|number"
        android:ems="10"
        android:id="@+id/dosage1"
        android:layout_alignBaseline="@+id/medicine1"
        android:layout_alignBottom="@+id/medicine1"
        android:layout_alignStart="@+id/dosage2"
        android:text="1"
        android:textColor="@android:color/background_light"
        android:hint="Dosage" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Medicine"
        android:ems="10"
        android:layout_marginTop="39dp"
        android:id="@+id/medicine2"
        android:layout_below="@+id/medicine1"
        android:layout_toStartOf="@+id/dosage2"
        android:textColor="@android:color/background_light"
        android:hint="Medicine Name" />

    <Button
        android:text="SUBMIT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="75dp"
        android:id="@+id/submit"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView" />

</RelativeLayout>
