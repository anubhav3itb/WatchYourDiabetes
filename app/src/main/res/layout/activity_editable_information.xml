<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.anubhavbhardwaj.watchyourdiabetes.MainActivity">

    <Button
        android:text="Continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="43dp"
        android:id="@+id/continue1"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_marginTop="36dp"
        android:id="@+id/editText19"
        tools:text="Post Lunch Blood Sugar"
        android:layout_below="@+id/editText18"
        android:layout_alignStart="@+id/editText18" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight"
        android:ems="10"
        android:layout_marginTop="48dp"
        android:id="@+id/editText11"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:inputType="numberDecimal" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text="Fasting Blood Sugar"
        android:ems="10"
        android:layout_marginTop="42dp"
        android:id="@+id/editText18"
        android:layout_below="@+id/editText12"
        android:layout_alignStart="@+id/editText12" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_marginBottom="20dp"
        android:id="@+id/editText21"
        tools:text="HBA1C"
        android:layout_above="@+id/continue1"
        android:layout_alignStart="@+id/editText19" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_marginBottom="20dp"
        android:id="@+id/editText20"
        tools:text="HBA1C"
        android:layout_above="@+id/continue1"
        android:layout_alignStart="@+id/editText19" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Height"
        android:ems="10"
        android:layout_marginTop="39dp"
        android:id="@+id/editText12"
        android:layout_below="@+id/editText11"
        android:layout_alignStart="@+id/editText11"
        android:inputType="numberDecimal" />

</RelativeLayout>
